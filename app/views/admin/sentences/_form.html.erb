<%= form_for [:admin, sentence.category, sentence] do |f| -%>
  <div class="form-group">
    <%= f.label :content, "Nội dung", class: "control-label" %>
    <%= f.text_field :content, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :meaning, "Nghĩa của câu", class: "control-label" %>
    <%= f.text_field :meaning, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :description, "Mô tả câu", class: "control-label" %>
    <%= f.text_field :description, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit "Hoàn tất", class: "btn btn-primary" %>
  </div>
<% end -%>
