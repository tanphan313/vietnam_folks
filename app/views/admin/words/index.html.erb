<h1>Danh sách từ khoá</h1>
<h3>Category: <%= link_to "#{@category.title}", edit_admin_category_path(@category) %></h3>

<%= link_to "Tạo từ khoá", new_admin_category_word_path(@category), class: "btn btn-primary" %>

<table class="table table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th>Content</th>
      <th>Meaning</th>
      <th>Option</th>
    </tr>
  </thead>
  <tbody>
    <%= render @words %>
  </tbody>
</table>
<%= will_paginate @words %>
