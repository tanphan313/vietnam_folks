<%= nested_form_for [:admin, word.category, word] do |f| -%>
  <div class="form-group">
    <%= f.label :content, "Nội dung", class: "control-label" %>
    <%= f.text_field :content, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.fields_for :background, word.background do |background| %>
      <%= background.fields_for :image, background.object.image do |image_builder| %>
        <div class="form-group">
          <%= image_builder.label :background, t("background"), class: "control-label" %>
          <%= image_builder.file_field :picture, class: "form-control" %>
        </div>
        <div class="form-group image-review">
          <%= image_tag word.background_picture_url if word.background_picture_url %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <%= f.label :meaning, "Nghĩa của từ", class: "control-label" %>
    <%= f.text_field :meaning, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit "Hoàn tất", class: "btn btn-primary" %>
  </div>
<% end -%>
