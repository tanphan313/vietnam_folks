<%= nested_form_for [:admin, category] do |f| %>
  <div class="form-group">
    <%= f.label :title, "Tiêu đề", class: "control-label" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.fields_for :background, category.background do |background| %>
      <%= background.fields_for :image, background.object.image do |image_builder| %>
        <div class="form-group">
          <%= image_builder.label :background, t("background"), class: "control-label" %>
          <%= image_builder.file_field :picture, class: "form-control" %>
        </div>
        <div class="form-group image-review">
          <%= image_tag category.background_picture_url if category.background_picture_url %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <%= f.label :description, "Mô tả", class: "control-label" %>
    <%= f.text_field :description, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit "Hoàn tất", class: "btn btn-primary" %>
  </div>
<% end %>
